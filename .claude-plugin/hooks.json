      "name": "skill-assessment-tracker",
      "description": "Track assessment results and improvements",
      "enabled": true,
      "priority": 600,
      "triggers": {
        "command": "/assess"
      },
      "handler": {
        "type": "tracking",
        "track": {
          "assessment_date": "Date of assessment",
          "scores": {
            "programming": "Programming Fundamentals score",
            "databases": "Database Management score",
            "api_design": "API Development score",
            "architecture": "Architecture & Patterns score",
            "performance": "Performance & Caching score",
            "devops": "DevOps & Infrastructure score",
            "security": "Testing & Security score"
          },
          "average_score": "Overall proficiency",
          "strongest_area": "Highest scoring specialization",
          "needs_improvement": "Lowest scoring areas",
          "recommended_focus": "AI-generated recommendations"
        }
      }
    },
    {
      "event": "command_executed",
      "name": "project-selector-tracker",
      "description": "Track project selection and progress",
      "enabled": true,
      "priority": 550,
      "triggers": {
        "command": "/projects"
      },
      "handler": {
        "type": "tracking",
        "track": {
          "projects_viewed": "Projects browsed",
          "project_selected": "Project started",
          "specialization": "Project's specialization",
          "difficulty": "Project difficulty level",
          "estimated_duration": "Weeks to complete",
          "start_date": "When project started",
          "status": "In Progress/Completed"
        }
      }
    },
    {
