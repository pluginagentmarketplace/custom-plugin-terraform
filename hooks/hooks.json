{
  "hooks": [
    {
      "name": "deployment-validator",
      "description": "Validate Terraform configuration before deployment",
      "events": [
        "terraform:plan",
        "terraform:apply"
      ],
      "enabled": true
    },
    {
      "name": "state-safety-checker",
      "description": "Verify state management safety practices",
      "events": [
        "state:init",
        "state:modify"
      ],
      "enabled": true
    },
    {
      "name": "module-quality-check",
      "description": "Check module quality and best practices",
      "events": [
        "module:create",
        "module:publish"
      ],
      "enabled": true
    },
    {
      "name": "provider-test-reminder",
      "description": "Remind about testing custom providers",
      "events": [
        "provider:develop",
        "provider:resource-add"
      ],
      "enabled": true
    },
    {
      "name": "best-practices-monitor",
      "description": "Monitor adherence to Terraform best practices",
      "events": [
        "code:commit",
        "terraform:init"
      ],
      "enabled": true
    }
  ],
  "automation": {
    "enable_plan_validation": true,
    "enable_state_safety_checks": true,
    "enable_module_testing": true,
    "enable_provider_testing": true,
    "enable_best_practices_check": true
  },
  "notifications": {
    "deployment_ready": "âœ… Terraform plan validated and ready for review",
    "state_safety": "ğŸ”’ State management follows best practices",
    "module_quality": "ğŸ“¦ Module {module_name} passes quality checks",
    "provider_testing": "ğŸ§ª Custom provider {provider_name} needs testing",
    "best_practices_warning": "âš ï¸ {issue} - Review best practices guide"
  }
}
